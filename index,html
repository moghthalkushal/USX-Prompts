        // Render Prompts
        const promptsList = document.getElementById('promptsList');
        const searchInput = document.getElementById('searchInput');

        function renderPrompts(filterText = '') {
            promptsList.innerHTML = '';
            
            const filtered = prompts.filter(p => 
                p.title.toLowerCase().includes(filterText.toLowerCase()) || 
                p.tags.some(tag => tag.toLowerCase().includes(filterText.toLowerCase())) ||
                p.content.toLowerCase().includes(filterText.toLowerCase())
            );

            if (filtered.length === 0) {
                promptsList.innerHTML = `
                    <div class="text-center py-12 text-slate-400">
                        <p class="text-lg">No prompts found matching "${filterText}"</p>
                    </div>`;
                return;
            }

            filtered.forEach(prompt => {
                const card = document.createElement('div');
                card.className = "bg-white rounded-xl border border-slate-200 shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden";
                
                card.innerHTML = `
                    <div class="p-5 border-b border-slate-100 flex justify-between items-start">
                        <div>
                            <div class="flex items-center gap-3 mb-1">
                                <span class="bg-blue-100 text-blue-800 text-xs font-bold px-2 py-0.5 rounded-full">#${prompt.id}</span>
                                <h3 class="font-bold text-lg text-slate-800">${prompt.title}</h3>
                            </div>
                            <div class="flex flex-wrap gap-2 mt-2">
                                ${prompt.tags.map(tag => `<span class="text-xs text-slate-500 bg-slate-100 px-2 py-1 rounded border border-slate-200">${tag}</span>`).join('')}
                            </div>
                        </div>
                        <button onclick="copyToClipboard('prompt-${prompt.id}')" class="group flex items-center gap-2 bg-slate-50 hover:bg-blue-50 text-slate-600 hover:text-blue-700 border border-slate-200 hover:border-blue-200 px-4 py-2 rounded-lg transition-all active:scale-95">
                            <span class="text-sm font-medium">Copy</span>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"></path></svg>
                        </button>
                    </div>
                    <div class="p-0 bg-slate-50/50">
                        <pre id="prompt-${prompt.id}" class="p-5 font-mono text-sm text-slate-700 whitespace-pre-wrap leading-relaxed overflow-x-auto custom-scrollbar border-l-4 border-transparent hover:border-blue-300 transition-colors">${prompt.content}</pre>
                    </div>
                `;
                promptsList.appendChild(card);
            });
        }

        // Copy Logic
        function copyToClipboard(elementId) {
            const text = document.getElementById(elementId).innerText;
            
            navigator.clipboard.writeText(text).then(() => {
                showToast();
            }).catch(err => {
                console.error('Failed to copy: ', err);
                const textArea = document.createElement("textarea");
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand("Copy");
                textArea.remove();
                showToast();
            });
        }

        // Toast Logic
        function showToast() {
            const toast = document.getElementById('toast');
            toast.classList.remove('hidden', 'hiding');
            
            setTimeout(() => {
                toast.classList.add('hiding');
                setTimeout(() => {
                    toast.classList.add('hidden');
                    toast.classList.remove('hiding');
                }, 300);
            }, 2000);
        }

        // Search Listener
        searchInput.addEventListener('input', (e) => {
            renderPrompts(e.target.value);
        });

        // Initial Render
        renderPrompts();

    </script>
</body>
</html>
